<% if @news.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%=t('.the_form_contain')%> <%= pluralize(@news.errors.count, t('.error') ) %>.
    </div>
    <ul>
    <% @news.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>