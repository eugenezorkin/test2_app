.row
  .col-md-6.col-md-offset-3
    = form_with(model: @user, local: true) do |form|
      = render 'shared/error_messages'
      = form.label :email
      = form.label :email, @user.email, class: 'form-control'
      = form.label t('.name')
      = form.text_field :name, class: 'form-control'
      = form.label t('.digest')
      = form.select(:digest, User.digests.keys.map {|digest| [t(digest),digest]}, {}, { :class => 'form-control' })
      = form.submit t('.save_button'), class: "btn btn-primary"
