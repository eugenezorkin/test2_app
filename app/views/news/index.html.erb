<p id="notice"><%= notice %></p>

<h1>News</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th>User</th>
      <th>User email</th>
      <th>edits number</th>
      <th <%if(@can_edit)%>colspan="3"><%end%></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.id %></td>
        <td><%= news.title %></td>
        <td><%= news.content %></td>
        <td><%= news.author %></td>
        <td><%= news.user_id %></td>
        <td><%= news.user.email %></td>
        <td><%= news.edits_number %></td>
        <td><%= link_to 'Show', news %></td>
        <%if(@can_edit)%><td><%= link_to 'Edit', edit_news_path(news) %></td><%end%>
        <%if(@can_edit)%><td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td><%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if(@can_edit)%><%= link_to 'New News', new_news_path %><%end%>
