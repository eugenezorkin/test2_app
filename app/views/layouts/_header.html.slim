header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to "test2 app", root_path, id: "logo"
    nav
      ul.nav.navbar-nav.navbar-right
        li
          = link_to t('.main_page'), root_path
        li
          = link_to t('.news_page'), news_index_path
        - if user_signed_in?
          li.dropdown
            a.dropdown-toggle[href="#" data-toggle="dropdown"]
              = t('.account')
              b.caret
            ul.dropdown-menu
              li
                = link_to t('.profile_page'), profile_path
              - if current_user.editor?
                li
                  = link_to t('.news_page'), controller: 'admin/news', action: :index
              - if current_user.admin?
                li
                  = link_to t('.users_page'), controller: 'admin/users', action: :index
              li.divider
              li
                = link_to t('.logout'), destroy_user_session_path, :method => :delete
        - else
          li
            = link_to t('.login'), new_user_session_path
          li
            = link_to t('.register'), new_user_registration_path
